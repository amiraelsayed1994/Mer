<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="160dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/release_datee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_event_24dp"
        android:drawablePadding="2dp"
        android:singleLine="true"
        android:inputType="text"
        android:textColor="#050505"
        android:textSize="25sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_below="@+id/rate"
        android:layout_toRightOf="@+id/img_poster"
        android:layout_toEndOf="@+id/img_poster"
        android:layout_marginTop="10dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_star_24dp"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:inputType="text"
        android:textColor="#050505"
        android:textSize="25sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/img_poster"
        android:layout_toEndOf="@+id/img_poster"
        android:layout_marginTop="10dp"
        android:paddingTop="2dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_local_movies_24dp"
        android:drawablePadding="2dp"
        android:singleLine="true"
        android:inputType="text"
        android:textColor="#050505"
        android:textSize="20sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_poster"
        android:layout_toEndOf="@+id/img_poster"
        android:paddingTop="5dp"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="favourite"
        android:id="@+id/favourite"
        android:layout_below="@+id/release_datee"
        android:layout_toRightOf="@+id/img_poster"
        android:layout_alignRight="@+id/release_datee"
        android:layout_alignEnd="@+id/release_datee"
        android:background="#c41717"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove"
        android:id="@+id/remove"
        android:background="#362ed7"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/favourite"
        android:layout_toRightOf="@+id/img_poster"
        android:layout_alignRight="@+id/favourite"
        android:layout_alignEnd="@+id/favourite"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@+id/img_poster"
        android:lines="10"
        android:layout_alignRight="@+id/remove"
        android:layout_alignEnd="@+id/remove"
        android:textSize="20sp"
        android:textColor="#0d0c0c"
        android:fontFamily="sans-serif" />

</RelativeLayout>